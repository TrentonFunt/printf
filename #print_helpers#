#include "main.h"

/**
 * print_pointer - Prints a pointer address
 * @addr: Pointer address to be printed
 *
 * Return: Number of characters printed
 */
int print_pointer(void *addr) {
	int include = 0;
	int i;
	char buffer[16];
	char hex_chars[] = "0123456789abcdef";

	buffer[0] = '0';
	buffer[1] = 'x';
	for (i = sizeof(void *) * 2 - 1; i >= 0; i--) 
	{
		buffer[2 + i] = hex_chars[((unsigned long)addr >> (i * 4)) & 0xF];
	}

	for (i = 0; i < 2 + sizeof(void *) * 2; i++)
	{
		_putchar(buffer[i]);
		include++;
	}

	return (include);
}

/**
 * print_unknown - Prints an unknown specifier
 * @specifier: Unknown specifier to be printed
 *
 * Return: Number of characters printed
 */
int print_unknown(char specifier) {
	_putchar('%');
	_putchar(specifier);
	return (2);
}
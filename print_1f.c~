#include "main.h"
#include <stdarg.h>
#include <unistd.h>
#include <stdio.h>
/**
 * _printf - Custom printf function
 * @format: Format string
 *
 * Return: Number of characters printed
 */
int _printf(const char *format, ...)
{
	va_list args;
	int counter = 0;
	const char *ptr;

	va_start(args, format);

	if (format == NULL)
		return -1;

	for (ptr = format; *ptr != '\0'; ptr++)
	{
		if (*ptr == '%' && (*(ptr + 1) == 'c' || *(ptr + 1) == 's' || *(ptr + 1) == '%'))
		{
			int value;

			switch (*(ptr + 1))
			{
			case 'c': /* for character specifier */
				value = va_arg(args, int);
				counter += write(1, &value, 1);
				break;
			case 's': /* for string specifier */
				counter += write(1, va_arg(args, char *), 1);
				break;
			case '%': /* for the % specifier */
				counter += write(1, "%", 1);
				break;
			default:
				return (-1);
			}

			ptr++; /* Move one extra to skip the conversion specifier */
		}
		else
		{
			counter += write(1, ptr, 1);
		}
	}

	va_end(args);

	return (counter);
}
